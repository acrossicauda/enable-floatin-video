{
  "manifest_version": 2,
  "version": "0.0.2",
  "name": "Enable Floating Video",
  "description": "Enable Floating Video",
  "author": "Tiago Sousa",
  "content_security_policy": "script-src 'self' https://www.youtube.com https://s.ytimg.com; object-src 'self'",
  "permissions": [
    "contextMenus",
    "activeTab",
    "*://www.youtube.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "options_ui": {
    "page": "index.html",
    "open_in_tab": true
  },
  "optional_permissions": [
    "*://www.youtube-nocookie.com/*",
    "management"
  ],
  "background": {
    "page": "index.html"
  },
  "browser_action": {
    "default_icon": "icon.png"
  }

}